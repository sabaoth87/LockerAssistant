<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.activity_lockassist_main"
    android:background="@color/colorAppDarkBg"
    tools:showIn="@layout/app_bar_dev_db"
    app:theme="@style/PHA_Theme">

    <TextView
        android:id="@+id/tv_content_dev_db"
        android:layout_width="368dp"
        android:layout_height="0dp"
        android:text="Hello World!"
        android:textAlignment="center"
        android:text="-- Database Entries --"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/dev_db_entries"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:divider="@color/colorAppDarkAccent"
        android:dividerHeight="2dp"
        android:footerDividersEnabled="true"
        android:headerDividersEnabled="true"
        android:paddingTop="30dp"
        android:scrollbars="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_content_dev_db" />


</android.support.constraint.ConstraintLayout>
