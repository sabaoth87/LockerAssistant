<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAppDarkBg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAppDarkAccent"
            android:text="@string/dev_db_edit_title" />

        <EditText
            android:id="@+id/dev_db_edit_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAppDarkAccent" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAppDarkAccent"
            android:text="@string/dev_db_edit_body" />

        <EditText
            android:id="@+id/dev_db_edit_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:minLines="5"
            android:scrollbars="vertical"
            android:textColor="@color/colorAppDarkAccent" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAppDarkAccent"
            android:text="@string/dev_db_edit_subject" />

        <EditText
            android:id="@+id/dev_db_edit_subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAppDarkAccent" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAppDarkAccent"
            android:text="@string/dev_db_edit_status" />

        <EditText
            android:id="@+id/dev_db_edit_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAppDarkAccent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/colorAppDarkAccent"
            android:text="@string/dev_db_edit_date" />

        <Button
            android:id="@+id/dev_db_edit_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/colorAppDarkAccent"
            android:text="@string/dev_db_edit_time" />

        <Button
            android:id="@+id/dev_db_edit_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/dev_db_edit_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dev_db_edit_confirm" />

    </LinearLayout>


</ScrollView>