<resources>

    <!-- Base application theme. -->

    <style name="PHA_Theme_DarkForest" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorBackground">@color/DarkForest_AppBackground</item>
        <item name="colorPrimary">@color/DarkForest_AppPrimary</item>
        <item name="colorPrimaryDark">@color/DarkForest_AppPrimaryDark</item>
        <item name="colorAccent">@color/DarkForest_AppAccent</item>
        <item name="textColorPrimary">@color/DarkForest_TextPrimary</item>
    </style>

    <style name="PHA_Theme_DarkForest.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="PHA_Theme_DarkForest.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorAppDarkBg</item>
        <item name="colorPrimaryDark">@color/colorAppGray</item>
        <item name="colorAccent">@color/colorAppDarkAccent</item>
    </style>

    <style name="PHA_Theme_DarkForest.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorAppDarkBg</item>
        <item name="colorPrimaryDark">@color/colorAppGray</item>
        <item name="colorAccent">@color/colorAppDarkAccent</item>
    </style>

    <style name="PHA_Theme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorAppDarkBg</item>
        <item name="colorPrimaryDark">@color/colorAppGray</item>
        <item name="colorAccent">@color/colorAppDarkAccent</item>
    </style>

</resources>
