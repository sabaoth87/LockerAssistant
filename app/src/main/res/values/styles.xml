<resources>

    <!-- Base application theme. -->
    <style name="PHA_Theme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorAppDarkBg</item>
        <item name="colorPrimaryDark">@color/colorAppGray</item>
        <item name="colorAccent">@color/colorAppDarkAccent</item>
    </style>

    <style name="PHA_Theme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="PHA_Theme.ActionBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorAppDarkBg</item>
        <item name="colorPrimaryDark">@color/colorAppGray</item>
        <item name="colorAccent">@color/colorAppDarkAccent</item>
    </style>

    <style name="PHA_Theme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorAppDarkBg</item>
        <item name="colorPrimaryDark">@color/colorAppGray</item>
        <item name="colorAccent">@color/colorAppDarkAccent</item>
    </style>

    <style name="PHA_Theme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorAppDarkBg</item>
        <item name="colorPrimaryDark">@color/colorAppGray</item>
        <item name="colorAccent">@color/colorAppDarkAccent</item>
    </style>

</resources>
